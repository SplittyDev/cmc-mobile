<?xml version='1.0' encoding='utf-8'?>
<widget id="com.splittydev.cmc" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>CoinMarketCap</name>
    <description>
        Sexy cryptomarket tracker.
    </description>
    <author email="splittydev@gmail.com" href="https://splittydev.com">
        Marco Quinten
    </author>
    <content src="index.html" />
    <access origin="https://api.coinmarketcap.com" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="KeepRunning" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
